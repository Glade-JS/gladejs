{
    "name": "@gladejs/rollup",
    "version": "0.5.0",
    "description": "The GladeJS Module adding support for Rollup, move along ...",
    "keywords": [
        "gladejs",
        "marko",
        "rollup-plugin",
        "browser-sync",
        "html-minifier"
    ],
    "homepage": "https://gladejs.com",
    "repository": "github:gladejs/gladejs",
    "bugs": "https://github.com/gladejs/gladejs/issues",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "type": "module",
    "main": "./dist/gladejs-rollup.js",
    "exports": "./dist/gladejs-rollup.js",
    "license": "MIT",
    "engines": {
        "npm": ">=6.14",
        "node": ">=14.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "release": {
        "tagFormat": "rollup-v${version}",
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "releaseRules": [
                        {
                            "scope": "!@rollup",
                            "release": false
                        }
                    ]
                }
            ],
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            [
                "@semantic-release/git",
                {
                    "message": "chore(release): @rollup version ${nextRelease.version} :tada: "
                }
            ],
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "@marko/babel-utils": "^5.7.0",
        "@marko/compiler": "^5.7.0",
        "browser-sync": "^2.26.14",
        "fs-extra": "^9.1.0",
        "glob": "^7.1.6"
    },
    "peerDependencies": {
        "rollup": "^2"
    },
    "publishConfig": {
        "access": "public"
    }
}
