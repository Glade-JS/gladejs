{
    "name": "@gladejs/rollup",
    "version": "0.7.1",
    "description": "The GladeJS Module adding support for Rollup, move along ...",
    "keywords": [
        "marko",
        "gladejs",
        "rollup-plugin"
    ],
    "homepage": "https://gladejs.com",
    "repository": "github:gladejs/gladejs",
    "bugs": "https://github.com/gladejs/gladejs/issues",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "type": "module",
    "main": "./index.js",
    "exports": {
        ".": "./index.js",
        "./src/gladejs-rollup.marko": "./src/gladejs-rollup.marko"
    },
    "license": "MIT",
    "engines": {
        "npm": ">=6.14",
        "node": ">=14.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "release": {
        "tagFormat": "rollup-v${version}",
        "branches": [
            "main",
            "next"
        ],
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "releaseRules": [
                        {
                            "scope": "!@rollup",
                            "release": false
                        }
                    ]
                }
            ],
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "CHANGELOG.md",
                        "package.json"
                    ],
                    "message": "chore(release): rollup package version ${nextRelease.version} :tada: "
                }
            ],
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "@marko/babel-utils": "^5.10",
        "@marko/compiler": "^5.10",
        "@marko/express": "^1.0.0",
        "@marko/vite": "^1.3.2",
        "browser-sync": "^2.27.4",
        "execa": "^5.1.1",
        "express": "^4.17.1",
        "fast-glob": "^3.2.6",
        "fs-extra": "^10.0.0",
        "normalize-path": "^3.0.0",
        "vite": "^2.4.4"
    },
    "peerDependencies": {
        "rollup": "^2.52"
    },
    "publishConfig": {
        "access": "public"
    }
}
