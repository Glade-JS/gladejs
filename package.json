{
    "name": "gladejs",
    "version": "0.5.1",
    "description": "Helping Marko to Roll Uphill, Pass the CaScadeS and reach the GladeJS at 11' for Tea (it's a static site generator)",
    "keywords": [
        "marko",
        "rollup",
        "postcss",
        "eleventy"
    ],
    "homepage": "https://gladejs.com",
    "repository": "github:gladejs/gladejs",
    "bugs": "https://github.com/gladejs/gladejs/issues",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "type": "module",
    "main": "./rollup.config.mjs",
    "exports": "./rollup.config.mjs",
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "rollup -c",
        "live": "rollup -c --watch",
        "clean": "rimraf build _site bundle_stats.html",
        "build:prod": "rollup -c --environment NODE_ENV:production",
        "lint": "prettier -c . && eslint .",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest --ci --bail"
    },
    "engines": {
        "npm": ">=6.14",
        "node": ">=14.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "jest": {
        "testEnvironment": "node",
        "watchPathIgnorePatterns": [
            "<rootDir>/node_modules/.*",
            "<rootDir>/tests/.+/(pages/|build/|_site/|bundle_stats\\.html)"
        ]
    },
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "env": {
            "node": true
        },
        "parserOptions": {
            "ecmaVersion": 2020,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "plugin:node/recommended",
            "plugin:import/recommended",
            "plugin:promise/recommended",
            "plugin:jest/recommended",
            "standard",
            "prettier"
        ],
        "reportUnusedDisableDirectives": true
    },
    "release": {
        "tagFormat": "gladejs-v${version}",
        "plugins": [
            [
                "@semantic-release/commit-analyzer",
                {
                    "releaseRules": [
                        {
                            "scope": "@*",
                            "release": false
                        }
                    ]
                }
            ],
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            [
                "@semantic-release/git",
                {
                    "message": "chore(release): gladejs version ${nextRelease.version} :tada: "
                }
            ],
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@gladejs/eleventy": "^0.5.0",
        "@gladejs/rollup": "^0.5.0",
        "@marko/rollup": "^3.1.0",
        "@rollup/plugin-commonjs": "^18.0.0",
        "@rollup/plugin-node-resolve": "^11.2.1",
        "@rollup/plugin-url": "^6.0.0",
        "browser-sync": "^2.26.14",
        "chokidar": "^3.5.1",
        "cssnano": "^4.1.11",
        "execa": "^5.0.0",
        "fs-extra": "^9.1.0",
        "glob": "^7.1.6",
        "marko": "^5.7.0",
        "postcss": "^8.2.10",
        "rimraf": "^3.0.2",
        "rollup": "^2.45.1",
        "rollup-plugin-styles": "^3.14.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-visualizer": "^5.3.4",
        "terser": "^5.6.1"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/commit-analyzer": "^8.0.1",
        "@semantic-release/git": "^9.0.0",
        "@semantic-release/github": "^7.2.1",
        "@semantic-release/npm": "^7.1.1",
        "@semantic-release/release-notes-generator": "^9.0.2",
        "eslint": "^7.24.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.3.5",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "prettier-plugin-toml": "^0.3.1",
        "semantic-release": "^17.4.2"
    }
}
