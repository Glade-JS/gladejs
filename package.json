{
    "name": "gladejs",
    "version": "0.2.0",
    "description": "Helping Marko to Roll Uphill, Past the CaScadeS and enter the GladeJS",
    "keywords": [
        "marko",
        "rollup",
        "postcss"
    ],
    "homepage": "https://gladejs.com",
    "repository": "github:gladejs/gladejs",
    "bugs": "https://github.com/gladejs/gladejs/issues",
    "author": {
        "name": "Aurélien Stébé",
        "email": "aurelien.stebe@gmail.com"
    },
    "main": "rollup-plugin.js",
    "license": "MIT",
    "scripts": {
        "start": "rollup -c -w",
        "clean": "rimraf build rollup_stats.html",
        "build": "rollup -c --environment NODE_ENV:production"
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github"
        ]
    },
    "dependencies": {
        "@marko/rollup": "^2.1.1",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-url": "^4.0.2",
        "browser-sync": "^2.26.7",
        "chokidar": "^2.1.8",
        "cssnano": "^4.1.10",
        "glob": "^7.1.6",
        "html-minifier": "^4.0.0",
        "marko": "^4.19.2",
        "postcss": "^7.0.27",
        "relateurl": "^0.2.7",
        "rimraf": "^3.0.2",
        "rollup": "^1.32.0",
        "rollup-plugin-brotli": "^2.0.2",
        "rollup-plugin-gzip": "^2.3.0",
        "rollup-plugin-postcss": "^2.1.1",
        "rollup-plugin-terser": "^5.2.0",
        "rollup-plugin-visualizer": "^3.3.1",
        "terser": "^4.6.6"
    },
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.0",
        "@semantic-release/git": "^9.0.0",
        "semantic-release": "^17.0.4",
        "standard": "^14.3.1"
    }
}
